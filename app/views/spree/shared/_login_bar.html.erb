<% if spree_current_user %>
  <li class="top-account"><%= link_to Spree.t(:my_account), spree.account_path %></li>
  <li class="top-logout"><%= link_to Spree.t(:logout), spree.logout_path %></li>
<% else %>
  <li class="top-login" id="link-to-login"><%= link_to Spree.t(:login), spree.login_path %></li>
<% end %>
